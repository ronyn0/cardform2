extends layout

block content
  h1 Background for: #{title}

  form(method='POST' action='' enctype='multipart/form-data')
    div(class='inputCard')
      div(class='inputContainer')
        label(for='CharID') Character ID:
        input#CharID(type='text', name='CharID' readonly, value=char_info.CharID)

        label(for='name') Lineage Name:
        input#name(type='text', placeholder='Bobmancer' name='name')

        label(for='link') Link:
        input#link(type='text', name='link')

        label(for='feature1') Feature 1:
        input#feature1(type='text', name='feature1')

        label(for='feature2') Feature 2:
        input#feature2(type='text', name='feature2')

        label(for='feature3') Feature 3:
        input#feature3(type='text', name='feature3')

        label(for='feature4') Feature 4:
        input#feature4(type='text', name='feature4')
        br

      div(class='inputContainer')
        button(type='submit' class='buttonStyle') Submit

  if errors
    div(class='inputCard')
      div(class='inputContainer')
        p Errors: 
        ul
          each error in errors
            li!= error.message
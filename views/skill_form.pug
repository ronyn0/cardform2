extends layout 

block content

  h1 Skills for: #{title}

  form(method='POST' action='' enctype='multipart/form-data')
    div(class='inputCard')
      div(class='inputContainer')
        label(for='CharID') Character ID:
        input#CharID(type='text', name='CharID' readonly, value=char_info.CharID)
        div(class='skillForm')
          label(class='container' for='Acrobatics') Acrobatics
            input(type='checkbox' id='Acrobatics' name='Acrobatics' value='1')
            span(class='checkmark')
        div(class='skillForm')
          label(class='container' for='AnimalHandling') Animal Handling
            input(type='checkbox' id='AnimalHandling' name='AnimalHandling' value='1')
            span(class='checkmark')
        div(class='skillForm')
          label(class='container' for='Arcana') Arcana
            input(type='checkbox' id='Arcana' name='Arcana' value='1')
            span(class='checkmark')
        div(class='skillForm')
          label(class='container' for='Athletics') Athletics
            input(type='checkbox' id='Athletics' name='Athletics' value='1')
            span(class='checkmark')
      
      div(class='inputContainer')
        button(type='submit' class='buttonStyle') Submit

  if errors
    div(class='inputCard')
      div(class='inputContainer')
        p Errors: 
        ul
          each error in errors
            li!= error.message
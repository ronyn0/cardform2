extends layout 

block content

  h1 Skills for: #{title}

  form(method='POST' action='' enctype='multipart/form-data')
    div(class='inputCard')
      div(class='inputContainer')
        label(for='CharID') Character ID:
        input#CharID(type='text', name='CharID' readonly, value=char_info.CharID)
        fieldset 
          legend Acrobatics:
          div(class='skillForm')
            input(type="radio" id="Acrobatics" name="Acrobatics" value="0" checked)
            label(for='Acrobtics1') Not proficient:&nbsp;
            input(type="radio" id="Acrobatics" name="Acrobatics" value="1")
            label(for='Acrobtics2') Proficient:
        br
        fieldset 
          legend Animal Handling:
          div(class='skillForm')
            input(type="radio" id="AnimalHandling" name="AnimalHandling" value="0" checked)
            label(for='AnimalHandling1') Not proficient:&nbsp;
            input(type="radio" id="AnimalHandling" name="AnimalHandling" value="1")
            label(for='AnimalHandling2') Proficient:
        br
        fieldset 
          legend Arcana:
          div(class='skillForm')
            input(type="radio" id="Arcana" name="Arcana" value="0" checked)
            label(for='Arcana1') Not proficient:&nbsp;
            input(type="radio" id="Arcana" name="Arcana" value="1")
            label(for='Arcana2') Proficient:
        br
        fieldset 
          legend Athletics:
          div(class='skillForm')
            input(type="radio" id="Athletics" name="Athletics" value="0" checked)
            label(for='Athletics1') Not proficient:&nbsp;
            input(type="radio" id="Athletics" name="Athletics" value="1")
            label(for='Athletics2') Proficient:
        br
      
      div(class='inputContainer')
        button(type='submit' class='buttonStyle') Submit

  if errors
    div(class='inputCard')
      div(class='inputContainer')
        p Errors: 
        ul
          each error in errors
            li!= error.message